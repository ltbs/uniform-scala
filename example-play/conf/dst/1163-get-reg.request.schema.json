{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Registration Request Schema",
  "description": "Registration Request Schema",
  "oneOf": [
    {
      "$ref": "#/definitions/individualOrOrganisation"
    },
    {
      "$ref": "#/definitions/noIndividualOrOrganisation"
    }
  ],
  "definitions": {
    "individualOrOrganisation": {
      "type": "object",
      "properties": {
        "regime": {
          "description": "The type of Tax Regime. Values for regime: ATED, AWRS, AMLS, CDS, DDS, TAVC, ITSA, FHDDS, ZSDL (Soft Drinks Industry Levy), PODA, AGL, LFT, APD, IPT, BD, GD, LD, BFP, GRF, FD, VTR, AIR, CGT, DST",
          "type": "string",
          "pattern": "^[A-Z]{2,10}$"
        },
        "requiresNameMatch": {
          "description": "Boolean value to indicate whether or not matching by name is required",
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "isAnAgent": {
          "description": "Boolean value to indicate whether the Business Partner is an Agent or not ",
          "type": "boolean"
        },
        "individual": {
          "description": "Container element for Individual-specific fields",
          "$ref": "#/definitions/individual"
        },
        "organisation": {
          "description": "Container element for Organisation-specific fields",
          "$ref": "#/definitions/organisation"
        }
      },
      "oneOf": [
        {
          "required": [
            "regime",
            "requiresNameMatch",
            "isAnAgent",
            "individual"
          ]
        },
        {
          "required": [
            "regime",
            "requiresNameMatch",
            "isAnAgent",
            "organisation"
          ]
        }
      ],
      "additionalProperties": false
    },
    "noIndividualOrOrganisation": {
      "type": "object",
      "properties": {
        "regime": {
          "description": "The type of Tax Regime. Values for regime: ATED, AWRS, AMLS, CDS, DDS, TAVC, ITSA, FHDDS, ZSDL (Soft Drinks Industry Levy), PODA, AGL, LFT, APD, IPT, BD, GD, LD, BFP, GRF, FD, VTR, AIR, CGT, DST",
          "type": "string",
          "pattern": "^[A-Z]{2,10}$"
        },
        "requiresNameMatch": {
          "description": "Boolean value to indicate whether or not matching by name is required",
          "type": "boolean",
          "enum": [
            false
          ]
        },
        "isAnAgent": {
          "description": "Boolean value to indicate whether the Business Partner is an Agent or not ",
          "type": "boolean"
        }
      },
      "required": [
        "regime",
        "requiresNameMatch",
        "isAnAgent"
      ],
      "additionalProperties": false
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$",
      "description": "Defines a date in the format dd-mm-yyyy"
    },
    "individual": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "pattern": "^[a-zA-Z &`\\-\\'^]{1,35}$"
        },
        "lastName": {
          "type": "string",
          "pattern": "^[a-zA-Z &`\\-\\'^]{1,35}$"
        },
        "dateOfBirth": {
          "$ref": "#/definitions/date"
        }
      },
      "required": [
        "firstName",
        "lastName"
      ],
      "additionalProperties": false
    },
    "organisation": {
      "type": "object",
      "properties": {
        "organisationName": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9- '&\\/]{1,105}$"
        },
        "organisationType": {
          "type": "string",
          "enum": [
            "Not Specified",
            "Partnership",
            "LLP",
            "Corporate Body",
            "Unincorporated Body"
          ]
        }
      },
      "required": [
        "organisationName",
        "organisationType"
      ],
      "additionalProperties": false
    }
  }
}
