# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page

->         /govuk-frontend                govuk.Routes
->         /hmrc-frontend                 hmrcfrontend.Routes

GET         /simple/           controllers.SimpleController.simpleAction(id = "")
GET         /simple/*id        controllers.SimpleController.simpleAction(id: String)
POST        /simple/           controllers.SimpleController.simpleAction(id = "")
POST        /simple/*id        controllers.SimpleController.simpleAction(id: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.versioned(path="/public/assets", file: Asset)
